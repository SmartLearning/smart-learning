{
  "name": "smart-learning",
  "env": {
    "APP_DIR": {
      "required": true
    },
    "APPLICATION_SECURITY_AUTHENTICATION_JWT_SECRET": {
      "required": true,
      "generator": "secret"
    },
    "GRADLE_TASK": {
      "required": true,
      "value": "stage -Pprod -PherokuRemoveAllFiles -PnodeInstall=true"
    },
    "GRADLE_USER_HOME": {
      "required": true
    },
    "LIBRATO_PASSWORD": {
      "required": true
    },
    "LIBRATO_TOKEN": {
      "required": true
    },
    "LIBRATO_USER": {
      "required": true
    },
    "MONGODB_URI": {
      "required": true
    },
    "NEW_RELIC_LICENSE_KEY": {
      "required": true
    },
    "NEW_RELIC_LOG": {
      "required": true
    }
  },
  "formation": {
  },
  "addons": [
    "newrelic",
    "librato",
    "logentries",
    {
      "plan": "mongolab",
      "as": "MONGODB"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/gradle"
    }
  ]
}
